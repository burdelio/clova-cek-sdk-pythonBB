pipeline {
    agent any
    environment {
        MAJOR_VERSION = "1"
        MINOR_VERSION = "1"
        BUILD_VERSION = sh(returnStdout: true, script: 'echo ${BUILD_NUMBER}').trim()
        VERSION = "${MAJOR_VERSION}.${MINOR_VERSION}.${BUILD_VERSION}"
        //DOCKERHUB_CREDENTIALS = credentials('dockerhub')
        //DOCKER_HOST = "tcp://docker:2375"
    }
  
    stages {
        stage('Build') {
            steps {
                echo 'budowanie:'
                sh "DOCKER_TLS_VERIFY= docker compose -f DevOpsBB/docker-compose.yml build --no-cache clova-cek-sdk-python-bb"
            }
            post {
                always{
                    echo 'done build'
                }
            }
        }
        stage('Test') {
            steps {
                sh "DOCKER_TLS_VERIFY= docker compose -f DevOpsBB/docker-compose.yml build --no-cache clova-cek-sdk-python-bb-tests"
            }
            post {
                always{
                    echo 'done test'
                }
            }
        }
        stage('Deploy') {
            when {
                branch 'master'
            }
            steps {
                sh "docker compose -f DevOpsBB/docker-compose.yml up -d"
            }
            post {
                always{
                    echo 'done deploy'
                }
            }
        }
    }
}
