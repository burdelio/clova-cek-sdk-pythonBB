pipeline {
    agent any
    environment {
        MAJOR_VERSION = "1"
        MINOR_VERSION = "1"
        BUILD_VERSION = sh(returnStdout: true, script: 'echo ${BUILD_NUMBER}').trim()
        VERSION = "${MAJOR_VERSION}.${MINOR_VERSION}.${BUILD_VERSION}"
        //DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
  
    stages {
//         stage('Checkout') {
//             steps {
//                 echo 'checkout:'
//                 checkout scm
//             }
//             post {
//                 always{
//                     echo 'done checkout'
//                 }
//             }
//         }
        stage('Build') {
            steps {
                echo 'budowanie:'
                sh "docker compose -f DevOpsBB/docker-compose.yml build clova-cek-sdk-pythonBB --host tcp://docker:2375"
            }
            post {
                always{
                    echo 'done build'
                }
            }
        }
        stage('Test') {
            steps {
                sh "docker compose run --rm app python -m pytest tests"
            }
            post {
                always{
                    echo 'done test'
                }
            }
        }
        stage('Deploy') {
            when {
                branch 'master'
            }
            steps {
                sh "docker compose -f DevOpsBB/docker-compose.yml up -d"
            }
            post {
                always{
                    echo 'done deploy'
                }
            }
        }
    }
}
